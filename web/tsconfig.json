{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": false,
		"noEmit": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
